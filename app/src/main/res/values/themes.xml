<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppCustomCounter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainWeightCounterWideView">
        <item name="android:layout_width">86dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="marginType">MARGIN_FROM_TEXTVIEW</item>
        <item name="minusButtonBackground">@drawable/bg_rounded_counter_ripple_button</item>
        <item name="minusButtonSrc">@drawable/ic_minus</item>
        <item name="plusButtonBackground">@drawable/bg_rounded_counter_ripple_button</item>
        <item name="plusButtonSrc">@drawable/ic_plus</item>
        <item name="disabledBackgroundButtonsColor">@color/gray_900</item>
        <item name="disabledSrcButtonsColor">@color/gray_500</item>
        <item name="backgroundButtonsColor">@color/gray_700</item>
        <item name="srcButtonsColor">@color/aqua_800</item>
    </style>

    <style name="BigWeightCounterWideView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="marginType">MARGIN_FROM_TEXTVIEW</item>
        <item name="paddingStart">12dp</item>
        <item name="paddingEnd">12dp</item>
        <item name="marginInDoorPercents">11</item>
        <item name="backgroundColor">@color/blue_500</item>
        <item name="backgroundRadius">20dp</item>
        <item name="minusButtonBackground">@drawable/bg_transparent_counter_button</item>
        <item name="minusButtonSrc">@drawable/ic_minus</item>
        <item name="plusButtonBackground">@drawable/bg_transparent_counter_button</item>
        <item name="plusButtonSrc">@drawable/ic_plus</item>
        <item name="srcButtonsColor">@color/aqua_800</item>
    </style>

    <style name="BigCounterWeightWideViewRipple">
        <item name="backgroundRipple">@drawable/bg_background_counter_wide_view_ripple</item>
        <item name="marginType">MARGIN_FROM_TEXTVIEW</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="paddingStart">12dp</item>
        <item name="paddingEnd">12dp</item>
        <item name="marginInDoorPercents">10</item>
        <item name="backgroundColor">@color/blue_500</item>
        <item name="backgroundRadius">20dp</item>
        <item name="minusButtonBackground">@drawable/bg_transparent_counter_button</item>
        <item name="minusButtonSrc">@drawable/ic_minus</item>
        <item name="plusButtonBackground">@drawable/bg_transparent_counter_button</item>
        <item name="plusButtonSrc">@drawable/ic_plus</item>
        <item name="disabledSrcButtonsColor">@color/gray_500</item>
        <item name="srcButtonsColor">@color/aqua_800</item>
    </style>

</resources>